<table class="table" data-hook="sale_price_table" id="product_sale_prices">
  <colgroup>
    <col style="width: 15%"></col>
    <col style="width: 5%"></col>
    <col style="width: 15%"></col>
    <col style="width: 15%"></col>
    <col style="width: 20%"></col>
    <col style="width: 20%"></col>
    <col style="width: 10%"></col>
  </colgroup>
  <thead>
    <tr data-hook="products_header">
      <th>
        <%= Spree.t('sku') %>
      </th>
      <th>
        <%= Spree.t('sale_price_active') %>
      </th>
      <th>
        <%= Spree.t('price') %>
      </th>
      <th>
        <%= Spree.t('sale_price') %>
      </th>
      <th>
        <%= Spree.t('sale_price_start_at') %>
      </th>
      <th>
        <%= Spree.t('sale_price_end_at') %>
      </th>
      <th>
        <%= Spree.t('sale_price_enabled') %>
      </th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "variant", collection: product.variants_including_master, locals: {product: product} %>
  </tbody>
</table>
